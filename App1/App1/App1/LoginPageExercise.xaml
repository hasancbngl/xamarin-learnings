<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.LoginPageExercise"
             BackgroundColor="#127ac7">
    <StackLayout VerticalOptions="Center" Spacing="20">
        <Label FontSize="30" FontAttributes="bold" Text="Welcome To Xamarin" TextColor="White" HorizontalOptions="Center" />
        <Label FontSize="18" FontAttributes="bold" Text="Cross Platform Apps made easy" TextColor="White" HorizontalOptions="Center" />
        <Button Text="Login" BackgroundColor="#1dabf0" TextColor="White" TextTransform="None" FontSize="16"/>
        <Button Text="Register" BackgroundColor="#1dabf0" TextColor="White" TextTransform="None" FontSize="16"/>
    </StackLayout>
</ContentPage>